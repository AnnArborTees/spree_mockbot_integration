<% content_for :page_title do %>
  Publishing idea <%= @idea.sku %>
<% end %>

<div class='row'>
  <% Spree::Mockbot::Idea::Publisher.steps.each_with_index do |step, i| %>
    <div id='publish-step-<%=i+1%>' class='publish-step alpha three columns <%= @step && @step == step ? 'active' : '' %>'>
      <i class='icon-play'></i>
      <div class='publish-content'>
        <%= step.to_s.humanize %>
      </div>
      <div class='progress-dots'>
        ...
      </div>
    </div>
  <% end %>

  <div id='publish-step-done' class='publish-step alpha three columns '>
    <i class='icon-play'></i>
    <div class='publish-content'>
      Done!
    </div>
  </div>
</div>

<div class="row">
  <% if @step.nil? %>
    <%= button_to "Start", spree.admin_mockbot_idea_publish_path(@idea.sku), remote: true, id: 'start-publish' , data: { disable_with: "Starting..." } %>
  <% end %>
</div>
