<% if @publisher %>
  $('#start-publish').remove();
  <% if @publisher.done? %>

  <% else %>
    var $previous = $('#publish-step-<%= @publisher.step_number-1 %>');
    var $next     = $('#publish-step-<%= @publisher.step_number %>');

    if ($previous.length) $previous.addClass('inactive');
    if ($next.length)     $next.removeClass('inactive');

    $.ajax({
      url: "<%= escape_javascript spree.admin_mockbot_idea_publish_path(@idea.sku) %>",
      type: 'POST',
      dataType: 'script'
    })

      .done(eval)

      .fail(function (jqXHR, textStatus) {
        alert('Server error, oh noooooooo');
      });
  <% end %>
<% end %>