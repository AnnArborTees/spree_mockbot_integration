<% if @error %>
  $('.steps-container').append(<%= @error %>);
<% else %>
  $('#start-publish').replaceWith(
    "<%=j render partial: 'start_button', locals: { publisher: @publisher } %>"
  );
  $('#start-publish').hide();
  $('#publish-buttons').prepend(
    "<%=j render partial: 'cancel_button', locals: { publisher: @publisher } %>"
  );

  MockbotPublish.clearActives();

  $('#publish-step-<%= @publisher.current_step_number -%>').addClass('active');

  MockbotPublish.updatePublisher("<%= spree.admin_mockbot_publisher_path(@publisher) %>");

<% end %>