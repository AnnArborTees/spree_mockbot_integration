<% content_for :page_title do %>
  Updates for <%= @product.name %> (<%= @product.slug %>)
<% end %>

<table class="index" id="listing_ideas">

  <colgroup>
    <col style="width: 20%;">
    <col style="width: 80%;">
  </colgroup>

  <thead>
    <tr data-hook="admin_updates_index_headers">
      <th>Date</th>
      <th>Message</th>
    </tr>
  </thead>

  <tbody>
    <% @updates.each do |update| %>
      <%= render partial: 'listing', locals: { update: update } %>
    <% end %>
  </tbody>

</table>
